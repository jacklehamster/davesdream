package com.dobuki.ad {	import flash.display.*;	import flash.events.*;		public class AdThingy extends MovieClip {		public function AdThingy() {			//addEventListener(Event.ADDED_TO_STAGE,fadeAd);						var mc:MovieClip = MovieClip(root);			var frameIndex:int = 1;			for(var i:int=0;i<mc.scenes.length;i++) {				trace(mc.scenes[i].name,frameIndex);				frameIndex += mc.scenes[i].numFrames;			}					}				private function get advertising():DisplayObject {			return getChildByName("ad");		}				private function fadeAd(e:Event):void {			advertising.alpha = 0;			var count:int = 0, maxCount:int = 60;			addEventListener(Event.ENTER_FRAME,				function(e:Event):void {					advertising.alpha = (count*count)/(maxCount*maxCount);					count++;					if(count>=maxCount) {						e.currentTarget.removeEventListener(e.type,arguments.callee);						advertising.alpha = 1;					}				});		}	}	}